
<table>
  <tr>
    <th>标题</th>
    <th>详细内容</th>
    <th>状态</th>
    <th>处理时间</th
    <th>备注</th>
    <th></th>
  </tr>

<% @ideas.each do |idea| %>
  <tr>
    <td><%= idea.title %></td>
    <td><%= idea.desc %></td>
    <td><%= get_state(idea.state) %></td>
    <td><%= idea.deal_time %></td>
    <td><%= idea.note %></td>
    <td>
    	<% if can_modify(idea)%>
    		<%= link_to 'Edit', edit_idea_path(idea), :class => 'btn' %>
    		<%= link_to 'Remove', idea, :confirm => 'Are you sure?', :method => :delete, :class => 'btn' %>
    	<% end %>
    </td>
  </tr>
<% end %>
</table>