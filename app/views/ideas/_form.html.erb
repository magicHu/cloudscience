<h1 class="pagetitle">意见或建议</h1>

<%= form_for(@idea) do |f| %>
  
  <%= f.error_messages %>

  <div class="clearfix">
    <%= f.label :title %>
	<div class="input">
    	<%= f.text_field :title, :class => 'input-xxlarge' %><%= render 'common/required' %>
	</div>
  </div>
  <div class="clearfix">
    <%= f.label :desc %>
    <div class="input">
    	<%= f.text_area :desc, :class => 'input-xxlarge', :rows => 6 %><%= render 'common/required' %>
    </div>
  </div>
  
  <div class="input">
    <%= f.submit '提交', :class => 'btn primary' %>
    <%= link_to '返回', ideas_path, :class => 'btn primary' %>
  </div>
<% end %>
