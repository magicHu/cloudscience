
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="clearfix">
    <%= f.label :email %>
	<div class="input">
    	<%= f.email_field :email %><%= render 'common/required' %>
	</div>
  </div>

  <div class="clearfix">
    <%= f.label :password %>
	<div class="input">
    	<%= f.password_field :password %><%= render 'common/required' %>
	</div>
  </div>

  <div class="clearfix">
    <%= f.label :password_confirmation %>
	<div class="input">
    	<%= f.password_field :password_confirmation %><%= render 'common/required' %>
	</div>
  </div>

  <div class="clearfix">
    <%= f.label :nickname %>
	<div class="input">
    	<%= f.text_field :nickname %><%= render 'common/required' %>
	</div>
  </div>

  <div class="clearfix">
    <%= f.label :name %>
	<div class="input">
    	<%= f.text_field :name %><%= render 'common/required' %>
	</div>
  </div>

  <div class="clearfix">
    <%= f.label :research_domain %>
	<div class="input">
    	<%= f.text_field :research_domain %><%= render 'common/required' %>
	</div>
  </div>

  <div class="clearfix">
    <%= f.label :workstation %>
	<div class="input">
    	<%= f.text_field :workstation %><%= render 'common/optional' %>
	</div>
  </div>

  <div class="clearfix">
    <%= f.label :mobile %>
	<div class="input">
    	<%= f.text_field :mobile %><%= render 'common/optional' %>
	</div>
  </div>

  <div class="clearfix">
    <%= f.label :telephone %>
	<div class="input">
    	<%= f.text_field :telephone %><%= render 'common/optional' %>
	</div>
  </div>

  <div class="input">
	<%= f.submit "注册",  :class => 'btn primary' %>
  </div>
<% end %>

